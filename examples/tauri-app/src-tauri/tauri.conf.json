{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "tauri-app",
	"version": "0.1.0",
	"identifier": "com.tauri.dev",
	"build": {
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": false,
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "tauri-app",
				"width": 880,
				"minWidth": 880,
				"minHeight": 300,
				"maxWidth": 1160,
				"maxHeight": 457
			}
		]
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
